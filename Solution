class Solution {
    public boolean isMatch(String s, String p) {
        int m = s.length(), n = p.length();
        boolean[][] dp = new boolean[m + 1][n + 1];

        dp[0][0] = true;

        // Empty s vs pattern like a*, a*b*, ...
        for (int j = 2; j <= n; j++) {
            if (p.charAt(j - 1) == '*') {
                dp[0][j] = dp[0][j - 2];
            }
        }

        for (int i = 1; i <= m; i++) {
            for (int j = 1; j <= n; j++) {
                char pc = p.charAt(j - 1);

                if (pc == '.' || pc == s.charAt(i - 1)) {
                    // current chars match
                    dp[i][j] = dp[i - 1][j - 1];
                } else if (pc == '*') {
                    // zero of the preceding element
                    dp[i][j] = dp[i][j - 2];

                    // one or more of the preceding element if it matches s[i-1]
                    char prev = p.charAt(j - 2);
                    if (prev == '.' || prev == s.charAt(i - 1)) {
                        dp[i][j] |= dp[i - 1][j];
                    }
                } // else stays false
            }
        }
        return dp[m][n];
    }
}
